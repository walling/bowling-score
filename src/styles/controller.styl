.controller
	width 10rem
	margin 2rem auto 0

	button
		display block
		width 100%
		margin-top 0.5rem
		height 2rem
		background #a00
		border-radius 1rem
		border 0
		border-bottom 2px solid #600
		color #fff
		font-family 'Lato', sans-serif
		font-weight 300
		font-size 1rem
		text-align center
		&:disabled
			border-bottom 0
			color mix(#a00, #fff, 30%)
			text-shadow 0 -1px 0 mix(#000, #a00, 30%)
		&::-moz-focus-inner
			border 0
		&:focus
			outline 1px dashed #666 !important
		&:active
			border-bottom 0
		&.highlighted
			margin-top 1.5rem
			background #444
			border-bottom-color #000
			&:disabled
				color mix(#444, #fff, 30%)
				text-shadow 0 -1px 0 mix(#000, #444, 30%)

	input
		display block
		width 100%
		margin-top 0.5rem
		height 2rem
		background #fff
		border-radius 1rem
		border 0
		color #333
		font-family 'Lato', sans-serif
		font-weight 300
		font-size 1rem
		text-align center
		&:disabled
			background #eee
			color #666
		&::-moz-focus-inner
			border 0
		&:focus
			outline 0 !important
